<!--pages/bookDetail/bookDetail.wxml-->
<view class='detail_page'>
  <view class='book'>
    <image src='{{resPath}}{{book.thumb}}'></image>
    <view class='content'>
      <h3>{{book.name}}</h3>
      <text>作者：{{book.author}}</text>
      <text>出版社：{{book.press}}</text>
      <text>书籍编号：{{book.bookNo}}</text>
    </view>
  </view>
  <view class='introduction'>
    <h3>书籍简介:</h3>
    <text>{{book.content}}</text>
  </view>
  <button class='btn_borrow' bindtap='goBorrow'>我要借书</button>
</view>
