

.search {
  width: 100%;
  margin-top: 20rpx;
}

.input {
  margin: 0 34rpx 10rpx;
  height: 80rpx;
  display: flex;
  border: 2rpx solid #BBBBBB;
  box-sizing: border-box;
  background: #E1DCDC;
  border-radius: 10rpx;
}

.input image:last-of-type {
  display: block;
  width: 54rpx;
  height: 54rpx;
  float: right;
  margin: 12rpx 28rpx;
}

.input image:first-of-type {
  display: block;
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin: 10rpx 26rpx 10rpx 24rpx;
}

.input input {
  flex: 1;
  height: 80rpx;
  font-size: 28rpx;
}

.confirm {
  width: 358rpx;
  height: 80rpx;
  background: #A5CFEE;
  font-size: 32rpx;
  color: #FFFFFF;
  margin-top: 110rpx;
  letter-spacing: 60rpx;
  padding-left: 88rpx;
}